<h1>Upload Photos</h1>

<%= form_for(@image, :html => {:multipart => true} ) do |f| %>
  <% @categories.each do |c| %>
    <%= check_box_tag "category_ids[]", c.id %>
    <%= label_tag c.title %><br>
  <% end %>

  <%= f.label :url %>
  <%= f.cl_image_upload :url, :html => {:required => true} %>

  <%= f.submit %>
<% end %>
