<p>Select categories:</p>

<%= form_for(@image, :html => {:multipart => true} ) do |f| %>
  <% @categories.each do |c| %>
    <%= check_box_tag "category_ids[]", c.id %>
    <%= label_tag c.title %><br>
  <% end %>

  
  <%= f.cl_image_upload :url, :html => {:required => true} %>
  <%= f.label :location %><br>

  <%= f.submit "Upload"%>
<% end %>
