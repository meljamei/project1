<h1>Sign in</h1>

<% if flash[:error].present? %>
<p><%= flash[:error] %></p>
<%end %>

<%= form_tag login_path, :class => 'form-inline' do %>

<div class="form-group">
  <%= label_tag 'Email' %>
  <%= email_field_tag :email,nil, :class => 'form-control'%>
</div>
<div class="form-group">
  <%= label_tag 'Password' %>
  <%= password_field_tag :password ,nil, :class => 'form-control'%>
</div>
  <%= submit_tag 'Login' %>
<% end %>
