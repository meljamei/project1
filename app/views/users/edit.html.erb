<h1>Edit Profile</h1>

<% if @user.errors.any? %>
  <ol>
    <%@user.errors.ful_message.each do |msg|%>
    <li> <%= msg %></li>
    <%end %>
  </ol>
  <% end %>

  <%= form_for @user do |f| %>
  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :avatar %>
  <%= f.url_field :avatar %>

  <%= f.submit %>
  <% end %>
