<div class="row">
  <div class="col-md-12">
    <ul class="profile-images">
    <!-- <% @user.images.each do |img| %>
      <li class="col-md-4"><%= image_tag img.url , :class => "box" %></li>
    <% end %> -->

    </ul>
  </div>
</div>

<% @user.images.in_groups_of(3, false).each do |group| %>
  <div class="row">
    <!-- <%= group %> -->
    <% group.each do |img| %>
      <div class="col-xs-12 col-md-4">
        <%= link_to cl_image_tag(img.url, :class => 'img-responsive'), image_path(img.id) %>
      </div>
    <% end %>
  </div>
<hr>
<% end %>
